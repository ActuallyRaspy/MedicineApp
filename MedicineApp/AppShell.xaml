<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MedicineApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedicineApp.Views"
    xmlns:views="clr-namespace:MedicineApp.Views">

    <TabBar> 
        <Tab Title="Product Page">
            <ShellContent
            ContentTemplate="{DataTemplate local:ProductPage}"
            Route="ProductPage"/>
        </Tab>
        
        <Tab Title="Checkout Page">
            <ShellContent
            
            ContentTemplate="{DataTemplate local:CheckoutPage}"
            Route="CheckoutPage"/>
        </Tab>

        <Tab Title="Product Detail Page">
            <ShellContent
            ContentTemplate="{DataTemplate local:ProductDetailPage}"
            Route="ProductDetailPage"/>
        </Tab>
    </TabBar>
</Shell>